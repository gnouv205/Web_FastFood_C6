@page "/admin/vai-tro/edit/{id}"
@layout AdminLayout
@inject RoleServices roleServices
@inject NavigationManager Nav

<style>
    /* Update Role Page Styles */
    .update-role-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .update-role-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1a365d;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #edf2f7;
    }

    .update-form {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .role-input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
    }

    .role-input:focus {
        border-color: #4299e1;
        box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.2);
    }

    .save-btn {
        background-color: #38a169;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .save-btn:hover {
        background-color: #2f855a;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .save-btn:active {
        transform: translateY(0);
    }

    .success-message {
        margin-top: 1rem;
        padding: 0.75rem 1rem;
        background-color: #f0fff4;
        color: #38a169;
        border: 1px solid #c6f6d5;
        border-radius: 8px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive Design */
    @@media (max-width: 640px) {
        .update-form {
            flex-direction: column;
        }
        
        .save-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="update-role-container">
    <h3 class="update-role-title">Cập nhật quyền</h3>
    
    <div class="update-form">
        <InputText @bind-Value="roleName" class="role-input" placeholder="Nhập tên quyền mới" />
        <button class="save-btn" @onclick="UpdateRole">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Lưu thay đổi
        </button>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="success-message">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            @message
        </div>
    }
</div>

@code {
    [Parameter]
    public string id { get; set; }
    private string roleName;
    private string message;

    protected override async Task OnInitializedAsync()
    {
        var role = await roleServices.GetRoleByIdAsync(id);
        roleName = role.Name;
    }

    private async Task UpdateRole()
    {
        var response = await roleServices.UpdateRole(id, roleName);
        if (response.IsSuccessStatusCode)
        {
            message = "Cập nhật thành công";
        }
        else
        {
            var error = await response.Content.ReadAsStringAsync();
            message = $"Thất bại: {error}";
        }
    }
}
