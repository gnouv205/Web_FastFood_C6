@page "/admin/san-pham/edit/{maSanPham:int}"
@layout AdminLayout
@inject HttpClient Http
@inject SanPhamService sanPhamService
@inject NavigationManager nav

<h3 class="text-xl font-semibold mb-4">Cập nhật sản phẩm</h3>

